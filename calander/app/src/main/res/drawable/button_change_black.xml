<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#f7f7f7"/>
            <stroke
                android:width="0.5dp"
                android:color="#f4f5f7"/>
            <corners
                android:radius="1dp"/>
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
        </shape>

    </item>
    <item>
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#ffffff"
                android:startColor="#ffffff"/>
            <stroke
                android:width="0dp"
                android:color="#f7f7f7"/>
            <corners
                android:radius="1dp"/>
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
        </shape>
    </item>
</selector>